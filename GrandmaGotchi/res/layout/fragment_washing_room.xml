<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/washing_room_gradient"
    tools:context=".FragmentWashingRoom" >

    <!-- TODO: Update blank fragment layout -->
    
    <ImageButton
        android:id="@+id/btn_washingroom_help"
        android:onClick="btnOnClickWashingroomHelp"
        android:layout_width="71dp"
        android:layout_height="60dp"
        android:layout_gravity="top|right"
        android:contentDescription="@string/btn_description_help_bedroom"
        android:src="@drawable/ic_action_help_washingroom" />
        <!-- android:background="@android:color/transparent" -->

    <ImageButton
        android:id="@+id/btn_soap"
        android:onClick="btnOnClickSoap"
        android:layout_width="71dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|left"
        android:contentDescription="@string/btn_description_soap"
        android:src="@drawable/ic_action_soap" />
        <!-- android:background="@android:color/transparent"-->
        
    <ImageButton
        android:id="@+id/btn_brush"
        android:onClick="btnOnClickBrush"
        android:layout_width="71dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center"
        android:contentDescription="@string/btn_description_broom"
        android:src="@drawable/ic_action_brush" />
        <!-- android:background="@android:color/transparent"-->

	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:text="@string/fragment_washing_room"
        android:layout_gravity="center" />

</FrameLayout>
