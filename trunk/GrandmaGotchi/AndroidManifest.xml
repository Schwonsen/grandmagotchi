<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uniks.grandmagotchi"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_grandma"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.uniks.grandmagotchi.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.uniks.grandmagotchi.RoomActivity"
            android:label="@string/title_activity_living_room" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.uniks.grandmagotchi.CreateNewGameActivity"
            android:label="@string/title_activity_create_new_game" 
            android:screenOrientation="portrait" >
        </activity>

        <service
            android:name="com.uniks.grandmagotchi.util.TimerService"
            android:exported="false" />

        <activity
            android:name="com.uniks.grandmagotchi.TicTacToeGameActivity"
            android:label="@string/title_activity_tic_tac_toe_game" 
            android:screenOrientation="portrait" >
        </activity>
        <activity 
            android:name="com.uniks.grandmagotchi.MealActivity"
            android:theme="@android:style/Theme.Dialog">
        </activity>
    </application>

</manifest>
